{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"   // Directory where the compiled JS files will go
  },
  "include": [
    "src/**/*"  // Include all files in the 'src' directory
  ],
  "exclude": [
    "node_modules"  // Exclude 'node_modules'
  ]
}
